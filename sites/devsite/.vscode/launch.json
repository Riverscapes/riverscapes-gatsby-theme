{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üë∑ Rebuild Gatsby Site",
      "command": "yarn exec gatsby build",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "name": "üóëÔ∏è Clean Gatsby Build",
      "command": "yarn exec gatsby clean",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "name": "Resource Debugger",
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/scripts/debug.js",
      "request": "launch",
      "runtimeExecutable": "${env:NVM_BIN}/node",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        // "GATSBY_TRACE_ID": "debug",
        // "GATSBY_CPU_COUNT": "2",
        "GATSBY_TELEMETRY_DISABLED": "1",
        "NODE_OPTIONS": "--max-old-space-size=8192",
      },
      "type": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Gatsby Node API",
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/../../node_modules/.bin/gatsby",
      "runtimeExecutable": "${env:NVM_BIN}/node",
      "args": [
        "develop"
      ],
      "env": {
        "GATSBY_TRACE_ID": "debug",
        "NODE_OPTIONS": "--max-old-space-size=8192"
      },
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/.cache/**",
        "${workspaceFolder}/../../theme/**",
      ],
      "runtimeArgs": [
        "--inspect=9229"
      ],
    }
  ]
}